<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ajla.app_asistencia.DocenteMenu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/texteorico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listateodoce"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:layout_marginBottom="10dp"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:baselineAligned="true"
    android:fillViewport="true">
    <ListView
        android:id="@+id/listamaterias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"  />
</ScrollView>

    <TextView
        android:id="@+id/textlab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listalabdoce"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:layout_marginBottom="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:baselineAligned="true"
        android:fillViewport="true">
        <ListView
            android:id="@+id/listalabsdoce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"  />
    </ScrollView>
</LinearLayout>
