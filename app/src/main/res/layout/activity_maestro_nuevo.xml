<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MaestroNuevoActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:text="@string/msjingresomdoce"
        android:textColor="@color/negro"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="@string/isss"
            android:textColor="@color/negro"
            android:textSize="13sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/isssnuevo"
            android:layout_width="270dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/fondo"
            android:hint="Ej.546789091" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="@string/nomdoceingreso"
            android:textColor="@color/negro"
            android:textSize="13sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/nomdocenuevo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/fondo"
            android:hint="Ej.Eduardo JosÃ©" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="@string/apedoceingreso"
            android:textColor="@color/negro"
            android:textSize="13sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/apedocenuevo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/fondo"
            android:hint="Recinos Galdamez" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="@string/contradoce"
                android:textColor="@color/negro"
                android:textSize="13sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/contradocenuevo"
                android:layout_width="270dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@color/fondo"
                android:hint="Ej.XXXXXXXXX" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4sp"
            android:layout_marginStart="150dp"
            android:text="@string/guardar"
            android:onClick="guardar"/>
    </LinearLayout>

</LinearLayout>